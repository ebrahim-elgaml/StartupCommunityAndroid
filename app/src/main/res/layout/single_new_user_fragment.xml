<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc" android:padding="18dp">

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        android:id="@+id/imageView"
        android:contentDescription="UserImage"
        android:src="@drawable/sleep"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_request"
        android:layout_gravity="right"
        android:text="Send request"
        android:background="@drawable/round_button_green"
        android:drawableLeft="@drawable/approval"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="85dp"
        android:layout_marginEnd="85dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_string"
        android:autoText="false"
        android:keepScreenOn="true" android:textColor="#ffffff"
        android:textStyle="bold" android:textSize="12sp" android:gravity="center"
        android:text="Startup Community"
        android:paddingLeft="12dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/send_request"
        android:layout_alignStart="@+id/send_request"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>